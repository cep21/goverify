{
  "checks": [
    {
      "macro": "goimport"
    }, {
      "macro": "gofmt"
    }, {
      "macro": "vet"
    }, {
      "macro": "golint"
    }, {
      "macro": "gocyclo"
    }, {
      "macro": "varcheck"
    }, {
      "macro": "aligncheck"
    }, {
      "macro": "structcheck"
    }, {
      "macro": "ineffassign"
    }, {
      "macro": "go-install"
    }, {
      "macro": "go-cover",
      "validate": {
        "coverage": 40
      }
    }, {
      "macro": "gocoverdir",
      "check": {
        "args": ["-race", "-timeout", "3s", "-cpu", "4", "-requiredcoverage", "40", "./..."]
      }
    }
  ]
}

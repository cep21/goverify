{
  "checks": [
    {
      "name": "import fix",
      "cmd": "goimports",
      "fix": {
        "args": ["-w", "-l", "$1"]
      },
      "check": {
        "args": ["-l", "$1"]
      },
      "each": {
        "cmd": "git",
        "args": ["ls-files", "--", "*.go"]
      }
    },
    {
      "name": "fmt fix",
      "cmd": "gofmt",
      "fix": {
        "args": ["-s", "-w", "-l", "$1"]
      },
      "check": {
        "args": ["-s", "-l", "$1"]
      },
      "each": {
        "cmd": "git",
        "args": ["ls-files", "--", "*.go"]
      }
    },
    {
      "name": "vet",
      "cmd": "go",
      "check": {
        "args": ["tool", "vet", "$1"]
      },
      "each": {
        "cmd": "git",
        "args": ["ls-files", "--", "*.go"]
      }
    },
    {
      "name": "code lint",
      "cmd": "golint",
      "check": {
        "args": ["-min_confidence=.3", "$1"]
      },
      "each": {
        "cmd": "git",
        "args": ["ls-files", "--", "*.go"]
      }
    },
    {
      "name": "cyclomatic check",
      "cmd": "gocyclo",
      "check": {
        "args": ["-over", "10", "$1"]
      },
      "each": {
        "cmd": "git",
        "args": ["ls-files", "--", "*.go"]
      }
    },
    {
      "name": "Check that installs",
      "cmd": "go",
      "check": {
        "args": ["install", "."]
      }
    },
    {
      "name": "code coverage",
      "cmd": "go",
      "check": {
        "args": ["test", "-cover", "-covermode", "atomic", "-race", "-parallel=8", "-timeout", "3s", "-cpu", "4", "./..."]
      },
      "validate": {
        "type": "cover",
        "coverage": 50
      }
    }
  ]
}
